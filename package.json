{
  "name": "firefly",
  "version": "1.0.0",
  "description": "Merged on July 4th, 2026.",
  "homepage": "beatriceundfabian.de",
  "repository": {
    "type": "git",
    "url": "https://github.com/fabian-kaegy-org/beatriceundfabian.de"
  },
  "workspaces": [
    "themes/*",
    "mu-plugins/firefly-plugin"
  ],
  "scripts": {
    "prepare": "TEN=\"$(pwd)\"; UP=\"$(git rev-parse --show-toplevel)\"; TENUP=\"${TEN#\"$UP\"}\"; cd \"$(git rev-parse --show-toplevel)\"; husky .\"${TENUP}\"/.husky",
    "build": "npm run build --workspaces --if-present",
    "start": "npm run watch",
    "watch:theme": "npm run watch -w=firefly-theme",
    "watch:plugin": "npm run watch -w=firefly-plugin",
    "watch": "run-p watch:theme watch:plugin",
    "lint-js": "npm run lint-js --workspaces --if-present",
    "format-js": "npm run format-js --workspaces --if-present",
    "lint-style": "npm run lint-style --workspaces --if-present",
    "test": "npm run test --workspaces --if-present",
    "clean-dist": "npm run clean-dist --workspaces --if-present"
  },
  "author": {
    "name": "Fabian & Beatrice",
    "email": "hochzeit@beatriceundfabian.de",
    "url": "beatriceundfabian.de",
    "role": "developer"
  },
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=9.0.0"
  },
  "dependencies": {
    "10up-toolkit": "^6.5.0"
  },
  "devDependencies": {
    "@wordpress/create-block": "4.55.0",
    "husky": "^9.1.7",
    "lint-staged": "^15.2.0",
    "npm-run-all": "^4.1.5",
    "prettier": "3.3.3"
  }
}
